services:
  worktracker.sql:
    container_name: WorkTacker.Sql
    environment:
      ACCEPT_EULA: "Y"
      SA_PASSWORD: SQLDbPassword@2021
    hostname: WorkTacker.Sql
    image: mcr.microsoft.com/mssql/server
    ports:
    - published: 1433
      target: 1433
    volumes:
    - db-data:/var/lib/mssql/data:rw
  worktracker.web:
    build:
      context: D:\Work\WorkTracker
      dockerfile: WorkTracker.Web/Dockerfile
    container_name: WorkTracker.Web
    depends_on:
      worktracker.sql:
        condition: service_started
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      ASPNETCORE_URLS: https://+:443;http://+:80
    hostname: WorkTracker.Web
    image: worktrackerweb
    ports:
    - published: 52000
      target: 80
    - published: 52001
      target: 443
    volumes:
    - C:\Users\darko\AppData\Roaming\ASP.NET\Https:/root/.aspnet/https:ro
    - C:\Users\darko\AppData\Roaming\Microsoft\UserSecrets:/root/.microsoft/usersecrets:ro
version: '3.4'
volumes:
  db-data: {}